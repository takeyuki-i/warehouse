<%= render "shared/header" %>

<%# 部分テンプレート %>
  <div class="tatal_page">
    <%# サイドバー読み込み %>
    <div class="side_bar" >
      <%= render "shared/side_bar" %>
    </div>
    <%# メインページ読み込み %>
    <div class="items_form" >
      <div>
        <div class = "menu_title" >
        商品新規登録
        </div>
        <div class="form">
          <div class ="new_item_regist" >
            <p>新しい商品を登録できます。</p>
            <p>商品の画像と名称を入力してください。</p>
            <p>　</p>
            <p>※画像は任意で登録できます。</p>
          </div>
          <p>　</p>
          <%= form_with(model: @item, local: true) do |form| %>
            <div class ="image_select " >
              画像の選択
            </div>
            <%= form.file_field :image, placeholder: "画像" ,class: :new_image_form %>

            <div class = "new_item_name" >
              商品の名称
            </div>
              <%= form.text_field :name, placeholder: "名称を入力して下さい" ,class: :new_name_form %>

            <div class = "new_item_name" >
              商品の説明
            </div>
              <%= form.text_area :information, placeholder: "商品の説明を入力出来ます。" ,class: :new_info_form %>

            <div class = "new_item_submit" >
              <%= form.submit "登録" ,class: :new_submit_form %>
            </div>
          <% end %>
        </div>
        <div class = "top_page_link_base">
        </div>
      </div>
    </div>

  </div>

